    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "启动程序",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "windows": { "runtimeExecutable": "npm.cmd" },
            "runtimeArgs": [ "run", "debug" ],
            "console": "integratedTerminal",
            "protocol": "auto",
            "restart": true,
            "port": 9229,
            "autoAttachChildProcesses": true
